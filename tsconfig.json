{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
    // Add these additional settings
    "moduleResolution": "node",           // Helps TypeScript understand how to resolve modules
    "resolveJsonModule": true,            // Allows importing JSON files
    "sourceMap": true,                    // Helps with debugging
    "baseUrl": "./src",                   // Sets the base directory for imports
    "rootDir": "./src",                   // Specifies the root directory of input files
    "allowJs": true,                      // Allows JavaScript files to be compiled
    "typeRoots": ["./node_modules/@types"], // Specifies type declaration directories
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],               // Specifies which files to include
  "exclude": ["node_modules", "dist"]    // Specifies which files to exclude
}